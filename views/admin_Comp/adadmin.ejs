<style>
  form{
    border: none;
  }
  h6{
    font-weight:bold;
  }
  .inp-container{
    height: 100px;
    padding: 5px;
    color: black;
    
  }
  .cont{
    background: #fff;
    width: 100%;
    height: 100%;
    padding: 10px;
  }
  .inputSuccess{
    color:green;
    border: 0px;
    border-bottom:2px solid green;

  }

  .error{
    color:red;
    background:	#f8baba;
    padding:5px;

  }


  .form-control{
    font-size: larger;
  }

  
</style>
<form action="/addStaff" method="post">
<div class="row p-4">

  <h2>Add Staff</h2>
  <div class="col-md-6 inp-container ">
    
    <div class="cont">
      <h6>First Name</h6>
      <div class="form-group p-1">
        <input type="text"  name="fname" class="form-control" id="fname"  placeholder="Enter staff first name"  autocomplete="off" required>
        <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
      </div>

    </div>
    
  </div>
  <div class="col-md-6 inp-container">
    <div class="cont">
      <h6>Last Name</h6>
      <div class="form-group p-1">
        <input type="text"  name="lname" class="form-control" id="lname"  placeholder="Enter staff last  name"  autocomplete="off" required>
        <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
      </div>

    </div>

  </div>

  <div class="col-md-6 inp-container">
    <div class="cont">
      <h6>Phone Number</h6>
      <div class="form-group p-1">
        <input type="text"  name="phone" class="form-control" id="Pnum"  placeholder="Enter staff phone number"  autocomplete="off" required/>
        <label class="form-text "  id="err"></label>
        
      </div>
    </div>
  </div>

  <div class="col-md-6 inp-container">
    <div class="cont">
      <h6>Email</h6>
      <div class="form-group p-1">
        <input type="email"  name="email" class="form-control" id="email"  placeholder="Enter staff email"  autocomplete="off" required/>
        <label class="form-text "  id="emailerr"></label>
        
      </div>
    </div>
   </div>
   <div class="col-md-6 text-center submit-box">
      <div class="form-group p-1">
        <button class="btn btn-outline-dark ">Add Staff</button>
        
      </div>
   </div>
</div>
</form>
